<div class="py-5">

  <h2>Iniciar Sesión</h2>
  <hr class="text-center">

  <form>

    <div class="form-group">

      <div class="form-group">
        <label>Email</label>
        <input class="form-control w-50 m-auto" type="text" id="email"/>
      </div>

      <div class="form-group">
        <label>Password</label>
        <input class="form-control w-50 m-auto" type="password" id="password"/>
      </div>

    </div>

    <button onclick="verificacion()" class="btn btn-success mb-3" type="button">Ingresar</button>
    <p>¿Aún no tienes cuenta? <a href="/usuarios">Regístrate</a></p>

  </form>
</div>

<script>

  const verificacion = async () => {

    const email = $('#email').val()
    const password = $('#password').val()
    const payload = { email, password } 

    try{

      const { data: token } = await axios.post('/login', payload)
      window.location.href = `/datos?token=${token}`

    }catch({ response }){

      const { data } = response
      const { error } = data
      alert(error)

    }

  }

</script>